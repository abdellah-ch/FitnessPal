// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    userId   String @id @unique
    Username String
    imageUrl String @db.Text
    email    String @db.Text

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    profile   Profile?
    exercices ExercicesOnUsers[]
    foods     FoodsOnUsers[]
}

model Profile {
    bio        String @db.Text
    weight     Int
    weightUnit String @default("lbs")
    height     Int
    heightUnit String @default("ft")
    weightGoal Int
    age        Int
    sex        String
    activety   String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId String @id @unique
    user   User   @relation(fields: [userId], references: [userId])
}

model Exercices {
    id       String @id @default(uuid())
    name     String
    duration Int
    calories Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    users ExercicesOnUsers[]
}

enum mealType {
    breakfast
    lunch
    dinner
    snacks
}

model Foods {
    id       String   @id @default(uuid())
    quantity Int
    mealtype mealType
    calories Int
    carbs    Int
    fat      Int
    protein  Int
    sodium   Int
    sugar    Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    users FoodsOnUsers[]
}

model ExercicesOnUsers {
    user   User   @relation(fields: [userId], references: [userId])
    userId String

    exercice   Exercices @relation(fields: [exerciceId], references: [id])
    exerciceId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@id([exerciceId, userId])
}

model FoodsOnUsers {
    user   User   @relation(fields: [userId], references: [userId])
    userId String

    food   Foods  @relation(fields: [foodId], references: [id])
    foodId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@id([foodId, userId])
}
