// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    userId   String @id @unique
    Username String
    imageUrl String @db.Text
    email    String @db.Text

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    daily     DailyCalGoal?
    profile   Profile?
    exercices Exercices?
    foods     Foods?
}

model DailyCalGoal {
    daily Int

    userId String @id @unique
    user   User   @relation(fields: [userId], references: [userId])
}

model Profile {
    bio        String @db.Text
    weight     Int
    weightUnit String @default("lbs")
    height     Int
    heightUnit String @default("ft")
    weightGoal Int
    age        Int
    sex        String
    activety   String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId String @id @unique
    user   User   @relation(fields: [userId], references: [userId])
}

model Exercices {
    userId       String @id @default(uuid())
    name     String
    duration Int
    calories Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    user   User   @relation(fields: [userId], references: [userId])
}

enum mealType {
    breakfast
    lunch
    dinner
    snacks
}

model Foods {
    userId       String   @id @default(uuid())
    quantity Int
    mealtype mealType
    calories Int
    carbs    Int
    fat      Int
    protein  Int
    sodium   Int
    sugar    Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    user   User   @relation(fields: [userId], references: [userId])
}


